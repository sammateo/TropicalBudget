@model Transaction
@{
    ViewData["Title"] = "New Transaction";
    List<TransactionCategory> transactionCategories = (List<TransactionCategory>)TempData["TransactionCategories"];
    List<TransactionSource> transactionSources = (List<TransactionSource>)TempData["TransactionSources"];
    List<TransactionType> transactionTypes = (List<TransactionType>)TempData["TransactionTypes"];
}

<div class="text-center">
    <h1 class="display-4">New Transaction</h1>
    <div>
        @using (Html.BeginForm("AddNewTransaction", "Home"))
        {
            @Html.AntiForgeryToken();
            <div class="d-flex flex-column gap-2">
                @Html.LabelFor(x =>x.Amount)
                @Html.TextBoxFor(x => x.Amount, new {@placeholder = "Amount", @type ="number"})
                
                @Html.LabelFor(x =>x.CategoryID, "Category")
                @Html.DropDownListFor(x => x.CategoryID, new SelectList(transactionCategories, "ID","Name"))
                @Html.LabelFor(x =>x.SourceID, "From")
                @Html.DropDownListFor(x => x.SourceID, new SelectList(transactionSources, "ID", "Name"))
                @Html.LabelFor(x => x.TransactionTypeID, "Transaction Type")
                @Html.DropDownListFor(x => x.TransactionTypeID, new SelectList(transactionTypes, "ID", "Name"))
                @Html.LabelFor(x => x.TransactionDate, "Date")
                @Html.EditorFor(x => x.TransactionDate, "{0:yyyy-MM-dd}", new {  @Value = DateTime.Now })
                @Html.LabelFor(x => x.Note)
                @Html.TextBoxFor(x => x.Note, new { @placeholder = "Note", @type = "text" })

                <input type="submit" name="SaveButton" value="Save" />

            </div>
        }
    </div>
</div>

