@model Transaction
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Transaction transaction = Model;
}

<div class="d-flex justify-content-between align-items-center border border-secondary rounded p-2">
                <div class="d-flex flex-column gap-0">
                    @if(!string.IsNullOrWhiteSpace(transaction.Note)){
                        <span class="fs-4 fw-normal">@(transaction.Note)</span>
                        <span class="fs-6 fw-light">@(transaction.CategoryName)</span>
                    }
                    else{
                        <span class="fs-4 fw-normal">@(transaction.CategoryName)</span>
                    }
                </div>
                <div class="d-flex gap-2 align-items-center">
                    @if(transaction.TransactionType.Equals("Income")){
                        <span style="color:green">+@($"{transaction.Amount:c}")</span>
                    }else{
                        <span>@($"{transaction.Amount:c}")</span>
                    }
                    <i style="cursor:pointer" class="bi bi-pencil-fill text-primary fs-6"></i>
                    <i style="cursor:pointer" onclick="deleteTransaction('@(transaction.ID)')" class="bi bi-trash text-danger fs-6"></i>
                </div>
               
            </div>