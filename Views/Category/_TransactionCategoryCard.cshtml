@model TransactionCategory
@using TropicalBudget.Utilities
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    TransactionCategory transactionCategory = Model;
    string categoryColor = transactionCategory.Color ?? CategoryUtility.DEFAULT_CATEGORY_COLOR;
}

<div class="d-flex align-items-center justify-content-between bg-light p-2">
    <div class="d-flex align-items-center gap-2">
        <span class="rounded-circle" style="width:20px; height:20px; background-color: @categoryColor; display:block"></span>
        <span class="fs-4 fw-normal">@(transactionCategory.Name)</span>
    </div>
    <div class="d-flex gap-2 align-items-center">
        <i style="cursor:pointer" onclick="editTransactionCategory('@(transactionCategory.ID)')" class="bi bi-pencil-fill  text-white px-3 py-2 fs-4 bg-primary rounded"></i>
        <i style="cursor:pointer" onclick="deleteTransactionCategory('@(transactionCategory.ID)')" class="bi bi-trash  text-white px-3 py-2 fs-4 bg-danger rounded"></i>
    </div>
</div>