@model List<TransactionCategory>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Categories";
    List<TransactionCategory> transactionCategories = Model;
}
<div class="text-center">
    <h1 class="display-4">Manage Your Transaction Categories</h1>
    <div class="my-4">
        <a class="text-decoration-none border p-2 d-block rounded btn btn-primary" asp-controller="Category" asp-action="Add">Add New Category</a>
    </div>
</div>

@if(transactionCategories != null && transactionCategories.Count > 0) {
    <div class="d-flex flex-column gap-2 bg-light p-2 rounded">
        @foreach(TransactionCategory transactionCategory in transactionCategories){
            <partial name="~/Views/Category/_TransactionCategoryCard.cshtml" model="transactionCategory" />
        }
    </div>
}


<script>
    const editTransactionCategory = (transaction_category_id) => {
        location.href = "@Url.Action("Edit", "Category")" +"?categoryID=" + transaction_category_id;

    }

    const deleteTransactionCategory = (transaction_category_id) => {
        if(confirm("Are you sure you want to delete this category?") == true){
            location.href = "@Url.Action("DeleteCategory", "Category")" +"?categoryID=" + transaction_category_id;
        }
    }
</script>